<Window x:Class="UtilityJournal.Shell.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UtilityJournal.Shell" xmlns:date="clr-namespace:UtilityJournal.Controls;assembly=UtilityJournal.Controls"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <date:DatePickerControl  x:Name="DatePickerControl" DateChange="DatePickerControl_DateChange" Height="100"></date:DatePickerControl>
            <date:MonthGridControl  x:Name="MonthGridControl" SelectionChanged="MonthGridControl_SelectionChanged" MinHeight="200" ></date:MonthGridControl>
            <ContentControl x:Name="ContentControl" ></ContentControl>
        </StackPanel>
    </Grid>
</Window>
